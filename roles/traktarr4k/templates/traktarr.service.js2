# /etc/systemd/system/traktarr4k.service

[Unit]
Description=traktarr4k
After=network-online.target unionfs.service docker.service

[Service]
User={{user}}
Group={{user}}
Type=simple
WorkingDirectory=/opt/traktarr4k/
TimeoutStartSec=900
ExecStartPre=/bin/sleep 120
ExecStart=/usr/bin/python3 /opt/traktarr4k/traktarr.py run
Restart=always
RestartSec=10

[Install]
WantedBy=default.target
